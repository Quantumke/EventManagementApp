<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="ml.dev2dev.eventregistrationapp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SPEAKER"
            android:id="@+id/textView"
            android:layout_weight="0.14"
            android:paddingLeft="60dp"
            android:paddingTop="20dp"
            android:textColor="#fff"
            android:background="#F36719" />

        <ImageView
            android:layout_width="63dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:src="@drawable/jackdorsey"
            android:layout_marginLeft="60dp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Jack Dorsey is an American programmer and entrepreneur widely
        known as a co-founder and CEO of Twitter,
        and as the founder and CEO of Square, a mobile payments company "
            android:id="@+id/textView2"
            android:layout_weight="0.33" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_weight="0.14"
            android:src="@drawable/twt"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="\@jacktwt"
            android:id="@+id/textView3"
            android:layout_weight="0.14"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-30dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AGENDA"
            android:id="@+id/textView4"
            android:layout_weight="0.06"
            android:background="#F36719"
            android:textColor="#ffffff"
            android:paddingTop="20dp"
            android:paddingLeft="20dp" />

        <ImageView
            android:layout_width="63dp"
            android:layout_height="100dp"
            android:id="@+id/imageView4"
            android:layout_weight="0.06"
            android:src="@drawable/agg"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Developers challange engineering field and prove possible p vs np solutions
            to be true or false logic dependate on the three xyz theories"
            android:id="@+id/textView5"
            android:layout_weight="0.06" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_weight="0.06"
            android:src="@drawable/twt"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Share on tweeter"
            android:id="@+id/textView6"
            android:layout_weight="0.06"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-20dp" />
    </LinearLayout>
</RelativeLayout>
